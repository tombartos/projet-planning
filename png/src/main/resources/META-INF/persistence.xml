<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

  <!-- The application persistence units -->
  <persistence-unit name="png">
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver" />
      <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:8080/postgres" />
      <!-- <property name="jakarta.persistence.jdbc.user" value="postgres" />
      <property name="jakarta.persistence.jdbc.password" value="mysecretpassword" /> -->

      <!-- Database creation: none, create, drop-and-create, drop -->
      <property name="jakarta.persistence.schema-generation.database.action"
                value="drop-and-create" />

      <!-- DDL Scripts generation: none, create, drop-and-create, drop -->
      <property name="jakarta.persistence.schema-generation.scripts.action"
                value="drop-and-create"/>

      <!-- The scripts generated by JPA -->
      <property name="jakarta.persistence.schema-generation.scripts.create-target"
                value="generated-create.ddl" />
      <property name="jakarta.persistence.schema-generation.scripts.drop-target"
                value="generated-drop.ddl" />
    </properties>
  </persistence-unit>

